{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "none"
      }
    ],
    "prefer-const": "warn", // Opcional: Reduz a severidade do prefer-const
    "react-hooks/exhaustive-deps": "warn" // Opcional: Reduz para aviso em hooks
  }
}
